{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "assets/**/*", "use": "@vercel/static" },
    { "src": "assets/api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/", "dest": "/index-en.html" },
    { "src": "/id", "dest": "/index-id.html" },
    { 
      "src": "/assets/css/(.*)",
      "dest": "/assets/css/$1"
    },
    { 
      "src": "/assets/js/(.*)",
      "dest": "/assets/js/$1"
    },
    { 
      "src": "/assets/images/(.*)",
      "dest": "/assets/images/$1"
    },
    { 
      "src": "/assets/file/(.*)",
      "dest": "/assets/file/$1"
    },
    { 
      "src": "/api/(.*)",
      "dest": "/assets/api/$1"
    },
    { "handle": "filesystem" }
  ]
}